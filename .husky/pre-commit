#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run tests in headless mode without coverage for faster pre-commit execution
# Allow commit even if some tests fail (for now, until test suite is fully fixed)
echo "Running pre-commit tests..."
npm run test:pre-commit || {
  echo "⚠️  Some tests failed, but allowing commit to proceed."
  echo "Please fix failing tests in a future commit."
  exit 0
}
